{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@modules": ["src/modules/index"],
      "@modules/*": ["src/modules/*"],
      "@gql": ["src/gql/index"],
      "@gql/*": ["src/gql/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,

    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "composite": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "types": ["jest", "node", "@types/jest"],
    "sourceMap": true
  },
  "include": [
    "./tests/**/*.ts",
    "tests/generate-keys.js"
  ]
}
